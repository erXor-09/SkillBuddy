# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# ============================================================================
# DATABASE CONFIGURATION (MongoDB Atlas)
# ============================================================================
# Get your MongoDB connection string from:
# https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/skillbuddy?retryWrites=true&w=majority&appName=skillbuddy

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate a secure secret key using:
# openssl rand -hex 64
JWT_SECRET=your_jwt_secret_key_here_use_openssl_rand_hex_64_to_generate
BCRYPT_ROUNDS=10

# ============================================================================
# OPENROUTER AI CONFIGURATION (Primary AI Service)
# ============================================================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here
AI_MODEL=meta-llama/llama-3.3-70b-instruct:free
SITE_URL=http://localhost:5173
SITE_NAME=SkillBuddy

# ============================================================================
# EMAIL CONFIGURATION (Gmail - OTP Based)
# ============================================================================
# To get Gmail App Password:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate a new app password for "Mail"
ENABLE_EMAIL_VERIFICATION=true
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
EMAIL_FROM=SkillBuddy <your_email@gmail.com>

# ============================================================================
# RATE LIMITING
# ============================================================================
# Window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AI_RECOMMENDATIONS=true
